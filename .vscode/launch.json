{
    "configurations": [
      {
        "name": "Запуск сервиса Docker Compose",
        "type": "node",
        "request": "launch",
        "cwd": "${workspaceFolder}",
        "runtimeExecutable": "docker-compose",
        "runtimeArgs": [
          "up",
          "--build",
          "dev"
        ],
        "outputCapture": "std",
        "console": "internalConsole",
        "skipFiles": [
          "<node_internals>/**"
        ]
      },
      {
        "name": "Дебаггер Node.js",
        "type": "node",
        "request": "attach",
        "port": 9230,
        "restart": true,
        "remoteRoot": "/app/",
        "localRoot": "${workspaceFolder}/",
        "skipFiles": [
          "<node_internals>/**"
        ]
      }
    ]
  }